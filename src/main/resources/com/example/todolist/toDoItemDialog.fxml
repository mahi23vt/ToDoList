<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.todolist.DialogController"
            prefHeight="400.0" prefWidth="600.0">
    <headerText>
        Put Instructions here
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Short Description:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="myShortDescriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Details:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="detailsAreaField" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"/>
            <Label text="DeadLine:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadLinePickerField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        </GridPane>
    </content>

</DialogPane>
